<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="Label:" />
		<EditText android:id="@+id/label" 
		  android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_weight="1"/>
	</LinearLayout>
	
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">	
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="Cellular code:" />
		<EditText android:id="@+id/cellcode" android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:scrollbars="vertical" />
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">	
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="Keyphrase:" />
		<EditText android:id="@+id/keyphrase" android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:scrollbars="vertical" />
	</LinearLayout>
		    		
	<Button android:id="@+id/confirm" 
	  android:text="Confirm"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

</LinearLayout>